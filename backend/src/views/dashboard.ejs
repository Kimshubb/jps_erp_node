<% /* views/dashboard.ejs - Only the main content for the dashboard page */ %>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-4">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= totalActiveStudents %></h5>
                <p class="card-text">Active Students</p>
            </div>
            <div class="card-footer">
                <ion-icon name="people"></ion-icon>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= totalInactiveStudentsYear %></h5>
                <p class="card-text">Inactive Students</p>
            </div>
            <div class="card-footer">
                <ion-icon name="people"></ion-icon>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= totalPaidViaCashToday %></h5>
                <p class="card-text">Cash Today</p>
            </div>
            <div class="card-footer">
                <ion-icon name="cash"></ion-icon>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= totalBankedToday %></h5>
                <p class="card-text">Bank Today</p>
            </div>
            <div class="card-footer">
                <ion-icon name="wallet-sharp"></ion-icon>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Recent Payments</h5>
        <a href="/payments/recent" class="btn btn-primary btn-sm">View All</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Grade</th>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Code</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% recentPayments.forEach(payment => { %>
                    <tr>
                        <td><%= payment.studentName %></td>
                        <td><%= payment.grade %></td>
                        <td><%= payment.amount %></td>
                        <td><%= payment.method %></td>
                        <td><%= payment.code || 'N/A' %></td>
                        <td><%= payment.isVerified ? 'Verified' : 'Pending' %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
